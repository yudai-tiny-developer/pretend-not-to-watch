{
    "manifest_version": 3,
    "name": "Remove from watch history button for YouTube Player",
    "version": "0.2.0",
    "description": "__MSG_appDesc__",
    "default_locale": "en",
    "content_scripts": [
        {
            "js": [
                "content.js"
            ],
            "run_at": "document_end",
            "matches": [
                "https://www.youtube.com/*"
            ],
            "all_frames": true
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "common.js",
                "inject.js"
            ],
            "matches": [
                "https://www.youtube.com/*"
            ]
        }
    ]
}